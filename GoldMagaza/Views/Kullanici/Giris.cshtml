@{
    ViewBag.Title = "Giriş Yap";
}

<h2 class="mb-4">🔐 Giriş Yap</h2>

@if (ViewBag.Hata != null)
{
    <div class="alert alert-danger">@ViewBag.Hata</div>
}

@using (Html.BeginForm("Giris", "Kullanici", FormMethod.Post))
{
    @Html.AntiForgeryToken() <!-- GÜVENLİK TOKENI EKLENDİ -->

    <div class="form-group mb-3">
        <label for="eposta">E-posta</label>
        <input type="email" name="eposta" id="eposta" class="form-control" required placeholder="E-posta adresiniz" />
    </div>

    <div class="form-group mb-3">
        <label for="sifre">Şifre</label>
        <input type="password" name="sifre" id="sifre" class="form-control" required placeholder="Şifreniz" />
    </div>

    <button type="submit" class="btn btn-success">Giriş Yap</button>
    <a href="/Kullanici/Kayit" class="btn btn-link">Hesabınız yok mu?</a>
}
