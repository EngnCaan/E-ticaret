@model List<GoldMagaza.Models.Urun>

@{
    ViewBag.Title = "Sepetim";
}

<h2 class="mb-4">🛒 Sepetim</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Sepetinizde ürün bulunmamaktadır.
    </div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Ürün</th>
                <th>Kategori</th>
                <th>Fiyat</th>
                <th>Görsel</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var urun in Model)
            {
                <tr>
                    <td>@urun.Ad</td>
                    <td>@urun.Kategori.Ad</td>
                    <td class="text-success fw-bold">@urun.Fiyat ₺</td>
                    <td>
                        <img src="@Url.Content(urun.ResimYolu)" width="80" style="border-radius:6px;" alt="@urun.Ad" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between mt-4">
        <a href="/Anasayfa/SepetiTemizle" class="btn btn-outline-danger"
           onclick="return confirm('Sepeti boşaltmak istediğinizden emin misiniz?');">🗑️ Sepeti Temizle</a>

        <a href="/Anasayfa/Odeme" class="btn btn-warning">Ödeme Bilgilerini Gir</a>

    </div>
}
