@model GoldMagaza.Models.OdemeBilgisi

@{
    ViewBag.Title = "Ödeme Bilgileri";
}

<h2 class="mb-4">💳 Ödeme Bilgileri</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "card p-4 shadow-sm", style = "max-width: 500px; margin: 0 auto;" }))
{
    <div class="mb-3">
        @Html.LabelFor(m => m.KartNumarasi, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.KartNumarasi, new { @class = "form-control", placeholder = "1234 5678 9012 3456" })
        @Html.ValidationMessageFor(m => m.KartNumarasi, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.SonKullanmaTarihi, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.SonKullanmaTarihi, new { @class = "form-control", placeholder = "MM/YY" })
        @Html.ValidationMessageFor(m => m.SonKullanmaTarihi, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(m => m.CVV, new { @class = "form-label" })
        @Html.TextBoxFor(m => m.CVV, new { @class = "form-control", placeholder = "123" })
        @Html.ValidationMessageFor(m => m.CVV, "", new { @class = "text-danger" })
    </div>

    <div class="form-check mb-3">
        @Html.CheckBoxFor(m => m.Kaydet, new { @class = "form-check-input", id = "Kaydet" })
        <label class="form-check-label" for="Kaydet">
            Kart bilgilerimi kaydetmek istiyorum
        </label>
    </div>

    <button type="submit" class="btn btn-success w-100">✅ Ödemeyi Tamamla</button>
}
