@model GoldMagaza.Models.Urun

@{
    ViewBag.Title = "Ürün Detayı";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-5">
            <img src="@Url.Content(Model.ResimYolu)" alt="@Model.Ad" class="img-fluid rounded shadow" style="max-height: 400px; object-fit: cover;" />
        </div>

        <div class="col-md-7">
            <h2 class="text-primary">@Model.Ad</h2>
            <p class="text-muted">Kategori: <span class="badge bg-secondary">@Model.Kategori.Ad</span></p>
            <h4 class="text-success fw-bold">@Model.Fiyat ₺</h4>

            <p class="mt-3">
                <strong>Ürün Açıklaması:</strong><br />
                Bu ürün hakkında açıklama buraya gelebilir. Dilersen bu alanı veritabanına ekleyebilirsin.
            </p>

            <div class="mt-4">
                <a href="/Anasayfa/SepeteEkle/@Model.Id" class="btn btn-success btn-lg">🛒 Sepete Ekle</a>
                <a href="/Anasayfa/Index" class="btn btn-outline-secondary ms-2">← Geri Dön</a>
            </div>
        </div>
    </div>
</div>
