@model GoldMagaza.Models.Kullanici

@{
    ViewBag.Title = "Profilim";
}

<h2>👤 Profil Bilgilerim</h2>

@if (ViewBag.Basarili != null)
{
    <div class="alert alert-success">
        @ViewBag.Basarili
    </div>
}

@using (Html.BeginForm("Profil", "Kullanici", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.AdSoyad)
        @Html.TextBoxFor(m => m.AdSoyad, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.AdSoyad, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Eposta)
        @Html.TextBoxFor(m => m.Eposta, new { @class = "form-control", type = "email", required = "required" })
        @Html.ValidationMessageFor(m => m.Eposta, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Sifre)
        @Html.PasswordFor(m => m.Sifre, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.Sifre, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Telefon)
        @Html.TextBoxFor(m => m.Telefon, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Telefon, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Sehir)
        @Html.TextBoxFor(m => m.Sehir, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Sehir, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Adres)
        @Html.TextAreaFor(m => m.Adres, new { @class = "form-control", rows = 3 })
        @Html.ValidationMessageFor(m => m.Adres, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
